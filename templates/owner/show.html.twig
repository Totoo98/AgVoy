{% extends 'base.html.twig' %}

{% block title %}Owner{% endblock %}

{% block main %}
    <h1>Owner</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ owner.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ owner.firstname }}</td>
            </tr>
            <tr>
                <th>FamilyName</th>
                <td>{{ owner.familyName }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ owner.address }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ owner.country }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('owner_index') }}">back to list</a>

    {% if is_granted('ROLE_USER') %} 
    <a href="{{ path('owner_edit', {'id': owner.id}) }}">edit</a>
    {% endif %}

    {% if is_granted('ROLE_USER') %} 
    {{ include('owner/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
